<% remote_form_for(:user_skill, @user_skill, 
                    :url => user_skill_path(@user_skill), 
                    :update => "skills_container",
                    :html => {:method => :put, 
                              :class => "edit_user_skill", 
                              :id => "edit_user_skill_#{@user_skill.id}"}) do |f| %>
  <%= f.error_messages %>

  <%= render "form", :f => f %>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>