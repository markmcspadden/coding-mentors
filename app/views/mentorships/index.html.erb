<h1>Listing mentorships</h1>

<table>
  <tr>
    <th>Mentee</th>
    <th>Mentor</th>
    <th>Sender</th>
    <th>Receiver</th>
    <th>Accepted at</th>
    <th>Rejected at</th>
    <th>Completed at</th>
  </tr>

<% @mentorships.each do |mentorship| %>
  <tr>
    <td><%=h mentorship.mentee_id %></td>
    <td><%=h mentorship.mentor_id %></td>
    <td><%=h mentorship.sender_id %></td>
    <td><%=h mentorship.receiver_id %></td>
    <td><%=h mentorship.accepted_at %></td>
    <td><%=h mentorship.rejected_at %></td>
    <td><%=h mentorship.completed_at %></td>
    <td><%= link_to 'Show', mentorship %></td>
    <td><%= link_to 'Edit', edit_mentorship_path(mentorship) %></td>
    <td><%= link_to 'Destroy', mentorship, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

