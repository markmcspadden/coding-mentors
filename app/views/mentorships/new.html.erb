<% if @mentee == current_user %>
  <% @content_title = "Interested in being Mentored by #{@mentor.name}?"%>
<% elsif @mentor == current_user %>
  <% @content_title = "Interested in Mentoring #{@mentee.name}?"%>
<% end %>

<% form_for(@mentorship) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label @mentor ? "I'd like help with:" : "I'd like to help with:" %><br />
    <br/>
    <% @matched_skills.each do |matched_skill| %>
      <% skill = matched_skill[:skill] %>      
      <% mentor_level = matched_skill[:mentor_level] %>
      <% mentee_level = matched_skill[:mentee_level] %>

      
      <%= check_box_tag "skills[#{skill.id}]" %><%= skill.name %><br/>
        
      <span class="mentorship_skills">
        <%= user_skill_image mentor_level %> Mentor Level
      </span><br/>
      <span class="mentorship_skills">
        <%= user_skill_image mentee_level %> Mentee Level
      </span>

      <br/>
    <% end %>
    
  </p>
  
  <p>
    All skills either you or <%= @receiver %> have<br/>
    <% @other_skills.each do |skill| %>
      <%= check_box_tag "skills[#{skill.id}]" %><%= skill.name %><br/>    
    <% end %>
  </p>
  
  <p>
    <%= f.label "Note" %><br />
    <%= f.text_area :sender_note %>
  </p>
  
  <hr />
  
  <%= render "form", :f => f %>

  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', mentorships_path %>